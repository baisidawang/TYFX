/* pages/check/check.wxss */
.image {
  width: 100%;
  height: 125px;
}
.all{
  background-color: white;
  border-radius: 10rpx; 
  margin: 5px;
  padding: 5px;
  border: 1px solid black;
}
.xxdjb{
  font-size: 30px;
  font-style: normal;
}
.rshd{
  border-bottom: 1px solid #000;
}
.contai {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
}
.pictkuang{
  max-width: 150px;
  max-height: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* aspect-ratio: 3/4; */
  border: 1px solid black;
}
.pictself{
  object-fit: cover;
  aspect-ratio: 3/4;
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.header {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.picker {
  font-size: 24rpx;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  background-color: #f8f8f8;
  text-align: center;
  width: 80%;
  margin-bottom: 30rpx;
}
.table-container {
  width: 95%;
  max-width: 100vh;
  background-color: #ffffff;
  border-radius: 10rpx; /* 钝角半径 */
  overflow: hidden;
  margin: 40rpx; /* 表格之间的距离 */
}

.table-content {
  padding: 20rpx;
  margin: 5px;
}













button {
  width: 200rpx;
  height: 80rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 10rpx;
}